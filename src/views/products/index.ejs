<h1 class="text-2xl font-bold mb-4">Perfume Shop</h1>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
  <% products.forEach(p => { %>
    <a href="/products/<%= p._id %>" class="block border rounded p-4 hover:shadow">
      <img class="w-full h-40 object-cover mb-2" src="<%= p.imageUrl || 'https://via.placeholder.com/600x400' %>" alt="<%= p.name %>" />
      <div class="font-semibold"><%= p.name %></div>
      <div class="text-sm text-gray-600"><%= p.brand %></div>
      <div class="text-pink-600 font-bold mt-1">$<%= p.price.toFixed(2) %></div>
    </a>
  <% }) %>
  <% if (products.length === 0) { %>
    <div>No products.</div>
  <% } %>
  </div>


