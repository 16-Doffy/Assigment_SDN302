<% /* Reusable marketing banner. Pass in imageUrl (required) and optional href */ %>
<section class="relative overflow-hidden rounded-2xl shadow-lg ring-1 ring-gray-100">
  <div class="grid md:grid-cols-2 gap-0 items-stretch bg-white">
    <!-- Left: Banner Image -->
    <div class="relative flex justify-center items-center bg-gradient-to-br from-purple-50 to-blue-50 p-4 md:p-6">
      <img src="<%= imageUrl %>" alt="<%= altText || 'Banner' %>" class="w-full h-[240px] md:h-[420px] object-contain" />
    </div>

    <!-- Right: Titles/CTA -->
    <div class="relative p-6 md:p-10 bg-white">
      <p class="inline-flex items-center gap-2 text-[11px] md:text-xs font-medium uppercase tracking-widest text-purple-700 bg-purple-100/60 rounded-full px-3 py-1 mb-3">Perfume Shop</p>
      <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight text-gray-900">Khám phá hương thơm mới hôm nay</h2>
      <% if (typeof subtitle !== 'undefined' && subtitle) { %>
        <p class="text-base md:text-lg text-gray-600 mt-3"><%= subtitle %></p>
      <% } %>

      <% const bullets = (typeof titles !== 'undefined' && Array.isArray(titles)) ? titles : ['Đẳng cấp quý ông', 'Đại sứ Dior', 'Tinh tế - sang trọng', 'Ưu đãi tuần này']; %>
      <ul class="mt-5 space-y-2">
        <% bullets.forEach(function(line){ %>
          <li class="flex items-start text-gray-800">
            <i class="fas fa-check text-emerald-600 mt-1 mr-2"></i>
            <span class="leading-relaxed"><%= line %></span>
          </li>
        <% }) %>
      </ul>

      <div class="mt-6">
        <% const bannerCtaHref = (typeof ctaHref !== 'undefined' && ctaHref) ? ctaHref : '/products'; %>
        <% const bannerCtaText = (typeof ctaText !== 'undefined' && ctaText) ? ctaText : 'Khám phá ngay!!!'; %>
        <a href="<%= bannerCtaHref %>" class="inline-flex items-center px-5 py-2.5 rounded-xl bg-purple-600 hover:bg-purple-700 text-white text-sm md:text-base shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition">
          <i class="fas fa-spray-can mr-2"></i><%= bannerCtaText %>
        </a>
      </div>
    </div>
  </div>
</section>


