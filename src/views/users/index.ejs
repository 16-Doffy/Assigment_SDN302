<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý người dùng - PE SDN302</title>
  <meta http-equiv="Content-Security-Policy"
  content="default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com; connect-src 'self'">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-admin">
    <div class="container-fluid">
      <a class="navbar-brand text-white" href="/dashboard">
        <i class="fas fa-users me-2"></i>User Management
      </a>
      <div class="navbar-nav ms-auto d-flex flex-row align-items-center gap-3">
        <% if (typeof member !== 'undefined' && member) { %>
          <a class="nav-link" href="/dashboard">
            <i class="fas fa-home me-1"></i>Dashboard
          </a>
          <a class="nav-link" href="/view/sections">
            <i class="fas fa-list me-1"></i>Sections
          </a>
          <a class="nav-link" href="/products">
            <i class="fas fa-box me-1"></i>Products
          </a>
          <% if (member.role === 'admin') { %>
            <a class="nav-link active" href="/view/users">
              <i class="fas fa-users me-1"></i>Users
            </a>
          <% } %>
          <a class="nav-link" href="/profile">
            <i class="fas fa-user me-1"></i>Profile
          </a>
          <div class="d-flex align-items-center gap-2">
            <span class="text-white">
              Xin chào, <strong><%= member.username %></strong>
            </span>
            <span class="badge-admin <%= member.role === 'admin' ? 'danger' : member.role === 'member' ? 'primary' : 'secondary' %>">
              <%= member.role %>
            </span>
          </div>
          <form action="/auth/signout" method="post" class="d-inline">
            <button class="btn btn-outline-light btn-sm" type="submit">
              <i class="fas fa-sign-out-alt me-1"></i>Sign out
            </button>
          </form>
        <% } else { %>
          <a class="nav-link" href="/auth/signin">Đăng nhập</a>
        <% } %>
      </div>
    </div>
  </nav>
  <main class="main-content">
    <div class="container-fluid">
      <h1 class="page-title">
        <i class="fas fa-users me-3"></i>Quản lý người dùng
      </h1>
      
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
          <i class="fas fa-user-plus fa-2x text-primary me-3"></i>
          <div>
            <h4 class="mb-0">Danh sách người dùng</h4>
            <p class="text-muted mb-0">Quản lý tài khoản trong hệ thống</p>
          </div>
        </div>
        <a href="/view/users/new" class="btn btn-admin-primary">
          <i class="fas fa-plus me-2"></i>Thêm người dùng
        </a>
      </div>

      <div class="admin-card">
        <div class="card-body">
          <% if (users.length === 0) { %>
            <div class="text-center py-5">
              <i class="fas fa-user-slash fa-5x text-muted mb-4"></i>
              <h4 class="text-muted">Chưa có người dùng nào</h4>
              <p class="text-muted">Bắt đầu bằng cách thêm người dùng đầu tiên</p>
              <a href="/view/users/new" class="btn btn-admin-primary">
                <i class="fas fa-plus me-2"></i>Thêm người dùng
              </a>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-admin">
                <thead>
                  <tr>
                    <th><i class="fas fa-user me-2"></i>Username</th>
                    <th><i class="fas fa-id-card me-2"></i>Họ tên</th>
                    <th><i class="fas fa-calendar me-2"></i>Năm sinh</th>
                    <th><i class="fas fa-shield-alt me-2"></i>Role</th>
                    <th><i class="fas fa-clock me-2"></i>Ngày tạo</th>
                    <th><i class="fas fa-cogs me-2"></i>Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(user => { %>
                    <tr>
                      <td><strong><%= user.username %></strong></td>
                      <td><%= user.fullname || '-' %></td>
                      <td><%= user.birthYear || '-' %></td>
                      <td>
                        <span class="badge-admin <%= user.role === 'admin' ? 'danger' : user.role === 'member' ? 'primary' : 'secondary' %>">
                          <%= user.role %>
                        </span>
                      </td>
                      <td><%= new Date(user.createdAt).toLocaleDateString('vi-VN') %></td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/view/users/<%= user._id %>/edit" class="btn btn-outline-primary" title="Chỉnh sửa">
                            <i class="fas fa-edit"></i>
                          </a>
                          <% if (user._id.toString() !== member.id) { %>
                            <button class="btn btn-outline-danger" onclick="deleteUser('<%= user._id %>', '<%= user.username %>')" title="Xóa">
                              <i class="fas fa-trash"></i>
                            </button>
                          <% } %>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>

<script>
function deleteUser(userId, username) {
  if (confirm(`Bạn có chắc chắn muốn xóa người dùng "${username}"?`)) {
    fetch(`/view/users/${userId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      }
    })
    .then(response => {
      if (response.ok) {
        location.reload();
      } else {
        alert('Có lỗi xảy ra khi xóa người dùng');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Có lỗi xảy ra khi xóa người dùng');
    });
  }
}
</script>

  </main>
</body>
</html>
