<h1>New Section</h1>
<form action="/view/sections" method="post">
  <div>
    <label>Section Name</label>
    <input type="text" name="sectionName" value="<%= values.sectionName %>" required />
    <% if (errors.sectionName) { %><span style="color:red"><%= errors.sectionName %></span><% } %>
    <small>Each word must start with a capital (A-Z), allow letters and digits.</small>
  </div>
  <div>
    <label>Description</label>
    <textarea name="sectionDescription" required><%= values.sectionDescription %></textarea>
    <% if (errors.sectionDescription) { %><span style="color:red"><%= errors.sectionDescription %></span><% } %>
  </div>
  <div>
    <label>Duration (minutes)</label>
    <input type="number" name="duration" min="0" value="<%= values.duration %>" required />
    <% if (errors.duration) { %><span style="color:red"><%= errors.duration %></span><% } %>
  </div>
  <div>
    <label>Is Main Task</label>
    <input type="checkbox" name="isMainTask" <%= values.isMainTask ? 'checked' : '' %> />
  </div>
  <div>
    <label>Course</label>
    <select name="course" required>
      <option value="">-- Select course --</option>
      <% courses.forEach(c => { %>
        <option value="<%= c._id %>" <%= values.course == c._id.toString() ? 'selected' : '' %>><%= c.courseName %></option>
      <% }) %>
    </select>
    <% if (errors.course) { %><span style="color:red"><%= errors.course %></span><% } %>
  </div>
  <button type="submit">Create</button>
</form>


