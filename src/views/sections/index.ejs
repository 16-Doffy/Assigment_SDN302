<h1>Sections</h1>
<p>Welcome, <strong><%= member.username %></strong></p>
<a href="/view/sections/new">Add Section</a>
<table border="1" cellspacing="0" cellpadding="6">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Is Main</th>
      <th>Course</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% sections.forEach((s, idx) => { %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= s.sectionName %></td>
        <td><%= s.sectionDescription %></td>
        <td><%= s.duration %></td>
        <td><%= s.isMainTask ? 'Yes' : 'No' %></td>
        <td><%= s.course ? s.course.courseName : '' %></td>
        <td>
          <a href="/view/sections/<%= s._id %>/edit">Edit</a>
          <form action="/view/sections/<%= s._id %>?_method=DELETE" method="post" style="display:inline" onsubmit="return confirm('Delete this section?')">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>


